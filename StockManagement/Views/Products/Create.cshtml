
@model StockManagement.ViewModels.VmProductCategory
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="col-md-12">
        <div id="boxDivId" class="box box-info box-solid">
            <div class="box-header with-border">
                <h3 class="box-title" style="text-align:center">
                    <span style="clear:both;">
                        <b>
                            Product : New Products
                        </b>
                    </span>
                </h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>

            <div class="box-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            Category:
                            <input list="Category" name="categoryName" id="categoryName" required autocomplete="off">
                            <datalist id="Category">
                                @foreach (var item in Model.CategoryList)
                                {
                                    <option value="@item.categoryName" />
                                }
                            </datalist>
                        </div><br />
                        <div class="form-group">
                            <div id="ProData" class="Table">
                                <div id="RowData" class="Row">
                                    <input type="text" name="productName" placeholder="ProductName" /><br /><br />
                                    <input type="text" name="purchasePrice" placeholder="purchasePrice" /><br /><br />
                                    <input type="text" name="salesPrice" placeholder="SalesPrice" /><br /><br />
                                    <input type="text" name="status" placeholder="Status" /><br /><br />
                                    <input type="file" name="imgFile" placeholder="imgFile" /><br />
                                    <a id="addRow" href="#" class="btn btn-xs btn-success"><i>+</i></a><hr />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <div class="row">
                    <div class="col-md-2">
                        <a class="form-group btn btn-danger btn-block fa fa-arrow-circle-left" href="/Products/Index"><span> Back</span></a>
                    </div>
                    <div class="col-md-6">

                    </div>
                    <div class="col-lg-4 col-md-4">
                        <button class="form-group btn btn-primary btn-block" value="Create" type="submit" id="btnPRsave">
                            <i class="fa fa-plus"></i>
                            <span>Create Products</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
 }

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script>

    $('#addRow').on('click', function () {
        $('#ProData').append('<div id="RowData" class="Row"><input type="text" name="productName" placeholder="ProductName" /><br><br><input type="text" name="purchasePrice" placeholder="PurchasePrice" /><br><br><input type="text" name="salesPrice" placeholder="SalesPrice" /><br><br><input type="text" name="status" placeholder="Status" /><br><br><input type="file" name="imgFile" placeholder="imgFile" /><a id="deleteRow" href="#" class="btn btn-xs btn-danger"><i>-</i></a><hr /></div>');
        $('#ProData').addClass();
        return false;
    });
    $('#ProData').on('click', '#deleteRow', function () {
        $(this).parent().remove();
        return false;
    });
</script>
