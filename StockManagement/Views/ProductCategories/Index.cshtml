@model IEnumerable<StockManagement.Models.tblProductCategory>

@{
    ViewBag.Title = "Index";
}

@*<div class="box-header">
        <h3 class="box-title" style="font-weight:bold">Category</h3>
    </div>*@
<div class="col-sm-12">
    <a href="/ProductCategories/Create" class="btn btn-info "><i class="fa fa-plus"></i> New Category</a>
</div>
<hr />
<br />
<br />
@{
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table class="table table-hover table-bordered cell-border">
                            <thead>
                                <tr style="font-size:16px">
                                    <th>
                                        @Html.DisplayNameFor(model => model.categoryName)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.categoryName)
                                        </td>
                                        <td>
                                            @Html.ActionLink(" Edit", "Edit", new { id = item.categoryID }, new { @class = "btn btn-primary fa fa-pencil" }) |
                                            @Html.ActionLink(" Details", "Details", new { id = item.categoryID }, new { @class = "btn btn-success fa fa-info" }) |
                                            @Html.ActionLink(" Delete", "Delete", new { id = item.categoryID }, new { @class = "btn btn-danger fa fa-trash-o" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
